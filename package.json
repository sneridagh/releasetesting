{
  "name": "releasetesting",
  "version": "1.0.7",
  "description": "",
  "main": "changelogupdater.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dry-release": "release-it --dry-run",
    "release": "release-it"
  },
  "author": "",
  "license": "ISC",
  "release-it": {
    "hooks": {
      "after:bump": "pipx run towncrier build --yes --version ${version}"
    },
    "git": {
      "changelog": "pipx run towncrier build --draft --yes --version 0.0.0",
      "requireUpstream": false,
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true,
      "releaseName": "${version}",
      "releaseNotes": "pipx run towncrier build --draft --yes --version ${version}"
    }
  },
  "devDependencies": {
    "release-it": "^15.5.0"
  },
  "packageManager": "yarn@3.2.3"
}
