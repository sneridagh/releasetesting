{
  "name": "@sneridagh/releasetesting",
  "version": "1.0.2",
  "description": "",
  "main": "changelogupdater.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dry-release": "release-it --dry-run",
    "release": "release-it"
  },
  "author": "",
  "license": "ISC",
  "release-it": {
    "scripts": {
      "changelog": "node changelogupdater.js excerpt",
      "beforeStage": "node changelogupdater.js bump ${version}",
      "afterRelease": "node changelogupdater.js back ${version}"
    },
    "git": {
      "requireUpstream": false,
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true,
      "releaseName": "${version}",
      "releaseNotes": "node changelogupdater.js excerpt"
    }
  },
  "dependencies": {
    "release-it": "^10.1.0"
  }
}
